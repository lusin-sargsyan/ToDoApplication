<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/space_20"
    android:background="@drawable/back_add">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edText"
        android:layout_width="@dimen/space_0"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_35"
        android:layout_marginHorizontal="@dimen/space_10"
        android:hint="@string/your_text"
        android:padding="@dimen/space_10"
        android:background="@drawable/shape_edit_text"
        android:inputType="textCapSentences"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnAddTodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_20"
        android:background="@drawable/shape_btn"
        android:paddingHorizontal="30dp"
        android:paddingVertical="@dimen/space_10"
        android:text="@string/add"
        android:textColor="@color/white"
        android:textSize="@dimen/size_17"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edText" />

</androidx.constraintlayout.widget.ConstraintLayout>